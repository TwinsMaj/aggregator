// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Properties {
	property_id Int @id @default(autoincrement())
	name String
	address String
	city String
	province String
	postal String
	access_247 Boolean?
	utilities_included Boolean?
	availability DateTime?
	cost Int?
	Offices Offices[]
	Warehouses Warehouses[]
	LoadingBays LoadingBays[]
	MeetingRooms MeetingRooms[]
}

model Warehouses {
	property_id Int @id
	square_footage Int
	fork_lifts Boolean?
	parking_trailer Boolean?
	fenced_yard Boolean?
	power_amps Int?
	Properties Properties @relation(fields: [property_id], references: [property_id], onDelete: Restrict, onUpdate: Restrict)
}

model LoadingBays {
	bay_id Int @id
	property_id Int
	truck_level Boolean
	trailer_53 Boolean
	dock_lock Boolean
	leveler Boolean
	Properties Properties @relation(fields: [property_id], references: [property_id], onDelete: Restrict, onUpdate: Restrict)
}

model Offices {
	property_id Int @id
	capacity Int
	kitchen Boolean?
	gym Boolean?
	parking Boolean?
	mailservice Boolean?
	Properties Properties @relation(fields: [property_id], references: [property_id], onDelete: Restrict, onUpdate: Restrict)
}

model MeetingRooms {
	room_id Int @id
	property_id Int
	capacity Int
	square_footage Int
	av_equipment Boolean
	exclusive Boolean
	Properties Properties @relation(fields: [property_id], references: [property_id], onDelete: Restrict, onUpdate: Restrict)
}